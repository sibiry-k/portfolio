html, body
  padding 0
  margin 0
  height 100%
  font-family Helvetica, Geneva, sans-serif
  color white

body
  display flex
  flex-direction column
  min-height 100vh

h1
  color white

h2
  font-size 16pt
  color #000157

h3
  font-size 12pt
  color blue

a
  text-decoration none

.width-wide
  margin 0 200px 0

.navigation
  display inline-flex
  justify-content space-between
  width 100%
  background-color #000157

  .logo
    display flex
    align-self center
    margin-left 200px

    a
      font-size 20pt
      color white

  .nav-list ul
    display inline-flex
    list-style-type none
    margin-right 200px

    .nav-item
      display flex
      flex-wrap nowrap
      text-transform uppercase
      margin-right 20px

      a
        font-size 14px
        color white


.about
  display grid
  grid-template-columns 1fr 1fr
  margin-top 30px
  margin-bottom 60px

  p
    font-size 14pt
    color #000157
    text-align justify

.my-photo
  display block
  margin-top 20px
  margin-left 100px

  img
    width 300px
    height auto

.projects
  display flex
  justify-content center
  margin-top 30px

  .cards-list
    display inline-flex
    background-color #f0f0ff
    border-radius 10px
    margin 20px
    padding 20px
    list-style none

    .card-item
      max-width 350px
      height 400 px

      p
        display flex
        flex-wrap wrap
        font-size 13pt
        color #000157


footer
  width 100%
  max-height 60px
  color white
  background-color #000157

  p
    font-size 10px
    margin 5px