html, body
  padding 0
  margin 0
  height 100%
  font-family Helvetica, Geneva, sans-serif

body
  display flex
  flex-direction column
  min-height 100vh

h1
  color white

h2
  font-size 16pt
  color #000157

h3
  font-size 12pt
  color blue

a
  text-decoration none

.width-wide
  margin 0 150px 0

.navigation
  display grid
  grid-template-columns 1fr auto 1fr
  grid-template-areas "logo nav-list nav-list"
  align-items center
  max-width 100%
  max-height 80px
  background-color #000157


  .logo
    grid-area logo
    display flex
    flex-flow row nowrap
    max-width: 100%;
    padding-left 150px

  .nav-list
    grid-area nav-list
    display flex
    justify-content space-between
    list-style-type none
    padding-right 200px
    margin 0

  .nav-item
    display flex
    flex-wrap nowrap
    margin 5px
    padding 5px

  .header-link
    font-size 20pt
    color white

  .header-link-item
    font-size 16pt
    color white

.about
  display grid
  grid-template-columns 1fr 1fr

  p
    font-size 14pt
    color #000157