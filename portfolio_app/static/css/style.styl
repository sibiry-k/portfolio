html, body
  padding 0
  margin 0
  height 100%
  font-family Helvetica, Geneva, sans-serif

body
  display flex
  flex-direction column
  min-height 100vh

h1
  color white

h2
  font-size 16pt
  color white

h3
  font-size 12pt
  color black

a
  text-decoration none


.navigation
  display grid
  grid-template-columns 1fr auto 1fr
  grid-template-areas "logo nav-list nav-list"
  align-items center
  max-width 100%
  max-height 80px
  background-color #000157


.logo
  grid-area logo
  display flex
  flex-flow row nowrap
  max-width: 100%;
  padding-left 150px

.nav-list
  grid-area nav-list
  display flex
  justify-content space-between
  list-style-type none
  padding-right 50px
  margin 0

.nav-item
  display flex
  flex-wrap nowrap
  margin 5px
  padding 5px
