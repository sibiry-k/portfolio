extends "base/base.pug"
block content
  .width-wide
    .registration
      .registartion-form
        h2 Регистрация
        form(method='post')
          {{ form.csrf_token }}
          h3 {{ form.username.label }}
          {{ form.username }}
          h3 {{ form.email.label }}
          {{ form.email }}
          h3 {{ form.password.label }}
          {{ form.password }}
          h3 {{ form.password2.label }}
          {{ form.password2 }}
          .button-submit
            {{ form.submit }}
      .registartion-flash
        - with messages = get_flashed_messages()
          if messages
            for message in messages
              p.warning= message
